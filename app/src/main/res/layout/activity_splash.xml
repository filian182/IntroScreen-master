<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/text"
        android:layout_width="395dp"
        android:layout_height="35dp"
        android:layout_below="@+id/intro_description"
        android:layout_marginTop="-171dp"
        android:fontFamily="@font/palanquin_dark_medium"
        android:gravity="center_horizontal"
        android:text="@string/text"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/intro_description"
        android:layout_width="381dp"
        android:layout_height="121dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:elevation="50dp"
        android:src="@drawable/logo1" />

    <TextView
        android:id="@+id/kumpulanpuisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_description"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/palanquin_dark_medium"
        android:gravity="center_horizontal"
        android:text="@string/textsplash1"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="20sp" />

    <ProgressBar
        android:layout_marginTop="31dp"
        android:layout_below="@+id/kumpulanpuisi"
        android:id="@+id/progress_bar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/versi"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kumpulanpuisi"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/palanquin_dark_medium"
        android:gravity="center"
        android:text="@string/textversi"
        android:textAlignment="gravity"
        android:textColor="#222222"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />


</RelativeLayout>
